<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mem.myeventmanager.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#f2f2f2"
    android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vidi tutorijal"
        android:id="@+id/addActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="addActivity"
        android:background="@drawable/rounded_corner"
        android:textColor="#e60059"
        android:textColorHighlight="#6f6e6e"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:shadowColor="#ffffff"
        android:layout_marginBottom="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista aktivnosti"
        android:id="@+id/manageActivities"
        android:layout_below="@+id/addActivity"
        android:layout_alignRight="@+id/addActivity"
        android:layout_alignEnd="@+id/addActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_corner"
        android:textColor="#e60059"
        android:textColorHighlight="#6f6e6e"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:enabled="true"
        android:elegantTextHeight="false"
        android:shadowColor="#ffffff"
        android:soundEffectsEnabled="true"
        android:onClick="listActivity"
        android:layout_marginBottom="0dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Otvori kalendar"
        android:id="@+id/openCalendar"
        android:layout_below="@+id/manageActivities"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_corner"
        android:textColor="#e60059"
        android:textColorHighlight="#6f6e6e"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:enabled="true"
        android:elegantTextHeight="false"
        android:shadowColor="#ffffff"
        android:soundEffectsEnabled="true"
        android:onClick="openCal"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Napusti aplikaciju"
        android:id="@+id/exitApp"
        android:background="@drawable/rounded_corner"
        android:textColor="#e60059"
        android:textColorHighlight="#6f6e6e"
        android:textStyle="bold"
        android:clickable="true"
        android:enabled="true"
        android:elegantTextHeight="false"
        android:shadowColor="#ffffff"
        android:soundEffectsEnabled="true"
        android:onClick="exitApp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:layout_below="@+id/openCalendar"
        android:layout_alignRight="@+id/openCalendar"
        android:layout_alignEnd="@+id/openCalendar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Event Manager"
        android:id="@+id/txtName"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/addActivity"
        android:layout_alignEnd="@+id/addActivity"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="0dp"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="#e60059"
        android:phoneNumber="false"
        android:password="false"
        android:gravity="center_horizontal"
        android:typeface="serif"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="50"
        android:layout_alignLeft="@+id/addActivity"
        android:layout_alignStart="@+id/addActivity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MEM Team"
        android:id="@+id/txtMem"
        android:textColor="#e60059"
        android:layout_alignRight="@+id/exitApp"
        android:layout_alignEnd="@+id/exitApp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:onClick="aboutUS"
        android:paddingBottom="50dp"
        android:textSize="25dp"
        android:textStyle="normal" />

</RelativeLayout>
